{
	"require-dev": {
		"jakub-onderka/php-console-highlighter": "0.4.0",
		"jakub-onderka/php-parallel-lint": "1.0.0",
		"mediawiki/mediawiki-codesniffer": "30.0.0",
		"mediawiki/mediawiki-phan-config": "0.9.1",
		"mediawiki/minus-x": "1.0.0",
		"phpunit/phpunit": "*"
	},
	"scripts": {
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules --exclude extensions",
			"phpcs -p -s",
			"minus-x check ."
		],
		"phan": [
			"phan -d . -p --allow-polyfill-parser"
		]
	}
}
